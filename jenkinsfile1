pipeline {
	agent { label 'master' }
	parameters {
		string(name: 'NAME', description: 'Enter your name here')
	}
	stages {
		stage('Build') {
			stage('Build') {
				steps {
					echo "NAME ${params.NAME}"
					sh "echo ${params.NAME}"
					sh 'sleep 5'
				}
			}
			
			stage('Test') {
				steps {
					sh '''
					sleep 5
					du -h
					'''
				}
			}
			stage('Deploy') {
				steps {
					sh '''
					sleep 5
					du -sh
					'''
 				}
			}
		}
	}
}
